<div id="flash_messages">
    <% Object.keys(messages).forEach(function (type) { %>
        <ul class="flash_message">
            <% messages[type].forEach(function (message) { %>
                <li>
                    <%= type.charAt(0).toUpperCase() + type.substring(1) %>
                    :
                    <%= message %>
                </li>
                <% }) %>
        </ul>
        <% }) %>
</div>
