{% extends './base_layout.nunjucks' %}

{% block head %}
    <link rel="stylesheet" href="/css/login.css"></link>
{% endblock %}

{% block body %}
<div class="login-page">
    <div class="form">
        <form class="login-form" method="POST" action="/login">
            <p>An email verification has been sent to {{ email }}. Please click the included link to verify your email.</p>
        </form>
    </div>
</div>
{% endblock %}
